<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_action_bar_scrim"
    android:paddingStart="@dimen/top_action_bar_padding_horizontal"
    android:paddingEnd="@dimen/top_action_bar_padding_horizontal">

  <ImageView
      android:id="@+id/close_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="?android:attr/selectableItemBackground"
      android:contentDescription="@string/cd_close_button"
      android:padding="@dimen/top_action_button_padding"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_close_vd_white_24" />

  <ImageView
      android:id="@+id/settings_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="?android:attr/selectableItemBackground"
      android:contentDescription="@string/cd_settings_button"
      android:padding="@dimen/top_action_button_padding"
      app:layout_constraintEnd_toStartOf="@+id/flash_button"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_settings_vd_white_24" />

  <ImageView
      android:id="@+id/flash_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="?android:attr/selectableItemBackground"
      android:contentDescription="@string/cd_flash_button"
      android:padding="@dimen/top_action_button_padding"
      app:layout_constraintEnd_toStartOf="@id/objects_mode_switch"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/camera_flash" />

  <androidx.appcompat.widget.SwitchCompat
      android:id="@+id/objects_mode_switch"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="?android:attr/selectableItemBackground"
      android:checked="false"
      android:padding="12dp"
      android:text="@string/objects_mode"
      android:textColor="@color/white"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <include
      android:id="@+id/seekView"
      layout="@layout/seek_bar_confidence"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@+id/objects_mode_switch" />

</androidx.constraintlayout.widget.ConstraintLayout>
