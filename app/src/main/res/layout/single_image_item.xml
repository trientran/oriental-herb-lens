<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <ImageView
        android:id="@+id/herb_image"
        android:layout_width="@dimen/preview_card_image_size"
        android:layout_height="@dimen/preview_card_image_size"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/preview_card_image_margin"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/herbIdView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="sans-serif-medium"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="@dimen/preview_card_title_text_size"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/latinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="8dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/dark"
        android:textSize="@dimen/preview_card_subtitle_text_size"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/vietnameseView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="8dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/dark"
        android:textSize="@dimen/preview_card_subtitle_text_size"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/search_with_google_using_vietnamese_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="sans-serif"
        android:padding="8dp"
        android:text="@string/search_with_google_vi"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="@dimen/preview_card_subtitle_text_size"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/search_with_google_using_latin_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="sans-serif"
        android:padding="8dp"
        android:layout_marginBottom="16dp"
        android:text="@string/search_with_google"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="@dimen/preview_card_subtitle_text_size"
        android:textStyle="italic" />

</LinearLayout>

